bin_PROGRAMS += bench/bench_bitcash
BENCH_SRCDIR = bench
BENCH_BINARY = bench/bench_bitcash$(EXEEXT)

RAW_BENCH_FILES = \
  bench/data/block413567.raw
GENERATED_BENCH_FILES = $(RAW_BENCH_FILES:.raw=.raw.h)

bench_bench_bitcash_SOURCES = \
  $(RAW_BENCH_FILES) \
  bench/bench_bitcash.cpp \
  bench/bench.cpp \
  bench/bench.h \
  bench/checkblock.cpp \
  bench/checkqueue.cpp \
  bench/Examples.cpp \
  bench/rollingbloom.cpp \
  bench/crypto_hash.cpp \
  bench/ccoins_caching.cpp \
  bench/mempool_eviction.cpp \
  bench/verify_script.cpp \
  bench/base58.cpp \
  bench/lockedpool.cpp \
  bench/prevector.cpp

nodist_bench_bench_bitcash_SOURCES = $(GENERATED_BENCH_FILES)

bench_bench_bitcash_CPPFLAGS = $(AM_CPPFLAGS) $(BITCASH_INCLUDES) $(EVENT_CLFAGS) $(EVENT_PTHREADS_CFLAGS) -I$(builddir)/bench/
bench_bench_bitcash_CXXFLAGS = $(AM_CXXFLAGS) $(PIE_FLAGS)
bench_bench_bitcash_LDADD = \
  $(LIBBITCASH_SERVER) \
  $(LIBBITCASH_WALLET) \
  $(LIBBITCASH_COMMON) \
  $(LIBBITCASH_UTIL) \
  $(CURL_LIBS) \
  $(LIBBITCASH_CONSENSUS) \
  $(LIBBITCASH_CRYPTO) \
  $(LIBLEVELDB) \
  $(LIBLEVELDB_SSE42) \
  $(LIBMEMENV) \
  $(LIBSECP256K1) \
  $(LIBUNIVALUE) \
  $(DL_LIBS) \
  $(VERIBLOCK_POP_CPP_LIBS)

if ENABLE_ZMQ
bench_bench_bitcash_LDADD += $(LIBBITCASH_ZMQ) $(ZMQ_LIBS)
endif

if ENABLE_WALLET
bench_bench_bitcash_SOURCES += bench/coin_selection.cpp
endif

bench_bench_bitcash_LDADD += $(BOOST_LIBS) $(BDB_LIBS) $(SSL_LIBS) $(CRYPTO_LIBS) $(MINIUPNPC_LIBS) $(EVENT_PTHREADS_LIBS) $(EVENT_LIBS)
bench_bench_bitcash_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(LIBTOOL_APP_LDFLAGS)

CLEAN_BITCASH_BENCH = bench/*.gcda bench/*.gcno $(GENERATED_BENCH_FILES)

CLEANFILES += $(CLEAN_BITCASH_BENCH)

bench/checkblock.cpp: bench/data/block413567.raw.h

bitcash_bench: $(BENCH_BINARY)

bench: $(BENCH_BINARY) FORCE
	$(BENCH_BINARY)

bitcash_bench_clean : FORCE
	rm -f $(CLEAN_BITCASH_BENCH) $(bench_bench_bitcash_OBJECTS) $(BENCH_BINARY)

%.raw.h: %.raw
	@$(MKDIR_P) $(@D)
	@{ \
	 echo "static unsigned const char $(*F)[] = {" && \
	 $(HEXDUMP) -v -e '8/1 "0x%02x, "' -e '"\n"' $< | $(SED) -e 's/0x  ,//g' && \
	 echo "};"; \
	} > "$@.new" && mv -f "$@.new" "$@"
	@echo "Generated $@"
